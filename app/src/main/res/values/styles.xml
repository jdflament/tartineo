<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="app_title">
        <item name="android:textAlignment">center</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">35dp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">@font/montserrat_alternates_bold</item>
    </style>

    <style name="auth_fields_layout">
        <item name="android:layout_marginVertical">50dp</item>
        <item name="android:layout_marginHorizontal">15dp</item>
    </style>
</resources>
